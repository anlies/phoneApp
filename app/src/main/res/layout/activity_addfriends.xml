<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhantuoer.AddfriendsActivity">

    <RelativeLayout
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:id="@+id/settings_head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="11%"
        android:background="@drawable/slide_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_fanhui"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加好友"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/MakeQRCode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="9%"
        android:text="我的二维码"
        app:layout_marginTopPercent="15%"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerHorizontal="true"
       />
   <RelativeLayout
       android:layout_width="210dp"
       android:layout_height="210dp"
       android:layout_below="@id/MakeQRCode"
       android:layout_centerHorizontal="true"
       app:layout_marginTopPercent="12%"
       android:background="@drawable/border"
       >
       <ImageView
           android:id="@+id/QRcode"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:layout_centerVertical="true"
           android:layout_centerHorizontal="true" />
   </RelativeLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="85%"
        app:layout_heightPercent="9%"
        android:text="添加好友"
        android:textSize="20sp"
        android:id="@+id/AddFriends"
        app:layout_marginTopPercent="9%"
        android:background="@drawable/buttonstyle"
        app:layout_marginBottomPercent="5%"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>

</android.support.percent.PercentRelativeLayout>
