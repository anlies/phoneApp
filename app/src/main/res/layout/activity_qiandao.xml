<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/settings_head"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/slide_bar"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView7"
            android:layout_marginStart="20dp"
            android:contentDescription="返回"
            android:src="@drawable/ic_fanhui" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="签到"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/send_my_qiandao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:contentDescription="发送"
            android:src="@drawable/ic_tijiao" />
    </RelativeLayout>

    <EditText
    android:id="@+id/editcontent"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="222dp"
    android:background="@null"
    android:gravity="start|top"
    android:textSize="20sp"
    android:textColor="@color/md_grey_600"
    android:hint="有志者事竟成，破釜沉舟，百二秦关终属楚；
苦心人天不负，卧薪尝胆，三千越甲可吞吴。"
    android:inputType="textMultiLine"
    android:maxLines="10"
    android:minLines="6"
    android:textAlignment="viewStart"
    android:layout_weight="0.23" />
<ImageView
    android:id="@+id/xiangji"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:src="@drawable/xiangji"/>
</LinearLayout>