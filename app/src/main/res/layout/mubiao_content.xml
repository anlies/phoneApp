<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/bgjietu"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/jilu_tittle"
            android:layout_width="wrap_content"
            android:textColor="@color/md_white_1000"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/jilu_tittle"
            android:layout_marginTop="4dp"
            android:text="进度:"
            android:textSize="20dp"
            android:id="@+id/textView8" />

        <TextView
            android:id="@+id/jindu"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/md_white_1000"
            android:textSize="20dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:layout_marginStart="16dp" />
        <Button
            android:visibility="gone"
            android:id="@+id/doneAll"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/qiandao_doneall"
            android:text="已完成"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView8" />
        <Button
            android:visibility="gone"
            android:id="@+id/qiandao_done"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/red_tuoyuan"
            android:text="已签到"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView8" />
        <Button
            android:visibility="gone"
            android:id="@+id/qiandao_fail"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/pink_tuoyuan"
            android:text="失败"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView8" />
        <Button
            android:visibility="gone"
            android:id="@+id/qiandao"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/fatie_tuoyuan"
            android:text="签到"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView8" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>