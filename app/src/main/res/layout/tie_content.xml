<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/settings_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/md_white_1000">
        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/back_black"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/userImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/back"
            android:layout_marginStart="16dp" />
        <TextView
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/userImage"
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp" />
    <Button
        android:visibility="invisible"
        android:id="@+id/guanzhu"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/red_tuoyuan"
        android:gravity="center"
        android:text="关注"
        android:textColor="@color/md_white_1000"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />
        <Button
            android:visibility="invisible"
            android:id="@+id/guanzhu2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/gray_tuoyuan"
            android:gravity="center"
            android:text="已关注"
            android:textColor="@color/md_white_1000"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/md_grey_300" />
        <WebView
            android:id="@+id/web_wiew"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/md_grey_300" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="4dp">

        <Button
            android:id="@+id/tie_bottom"
            android:layout_width="272dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tuoyuan"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_ziliao"
            android:gravity="center_vertical"
            android:hint="优秀的评论是对他人最好的鼓励" />

        <ImageView
            android:id="@+id/zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_zan" />

        <ImageView
            android:id="@+id/zan_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_zan_red"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/fenxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_fenxiang" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/md_grey_300" />
</LinearLayout>