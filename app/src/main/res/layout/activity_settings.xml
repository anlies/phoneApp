<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.zhantuoer.settingsActivity">

    <RelativeLayout
        android:fitsSystemWindows="true"
        android:orientation="horizontal"
        android:id="@+id/settings_head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="11%"
        android:background="@drawable/slide_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_fanhui"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/textView7"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:id="@+id/textView7"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_tijiao"
            android:id="@+id/send"
            android:layout_marginEnd="20dp"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/head_picture_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="13%"
        android:layout_below="@+id/settings_head"
        android:layout_alignParentStart="true"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/head_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture"
            app:civ_border_color="@color/md_yellow_300"
            app:civ_border_width="1dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="200dp"
            android:src="@drawable/nav_icon"
            />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@id/head_picture_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        />
    <LinearLayout
        android:id="@+id/Nick_Name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/line"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/true_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8d8d8d"
            android:textSize="18sp"
            android:layout_marginLeft="200dp"
            android:layout_gravity="center"/>


    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_below="@id/Nick_Name"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        />
    <LinearLayout
    android:id="@+id/Sex"
    android:orientation="horizontal"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_widthPercent="100%"
    app:layout_heightPercent="8%"
        android:background="?android:attr/selectableItemBackground"
    android:layout_below="@+id/line1">
    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center"/>
        <TextView
            android:id="@+id/true_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8d8d8d"
            android:textSize="18sp"
            android:layout_marginLeft="200dp"
            android:layout_gravity="center"/>
</LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_below="@id/Sex"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        />
    <LinearLayout
        android:id="@+id/Age"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/line2"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/true_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8d8d8d"
            android:textSize="18sp"
            android:layout_marginLeft="200dp"
            android:layout_gravity="center"/>


    </LinearLayout>
    <View
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/Age"
        android:background="#c0c0c0"
        />
    <LinearLayout
        android:id="@+id/Phone_number"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/line7"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话号码"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/true_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8d8d8d"
            android:textSize="18sp"
            android:layout_marginLeft="120dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    <View
        android:id="@+id/line3"
        android:layout_below="@id/Phone_number"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="5%"
        android:layout_below="@id/line3"
        android:background="#fafafa"

        />
    <View
        android:id="@+id/line4"
        android:layout_below="@id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        app:layout_marginTopPercent="5%"
        />
    <LinearLayout
        android:id="@+id/Person_Sign"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/line4"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/person_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/true_person_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8d8d8d"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:id="@+id/line5"
        android:layout_below="@id/Person_Sign"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        />
    <LinearLayout
        android:id="@+id/More_Info"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/line5"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:id="@+id/line6"
        android:layout_below="@id/More_Info"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line6"
        android:background="#fafafa"
        />
</android.support.percent.PercentRelativeLayout>
